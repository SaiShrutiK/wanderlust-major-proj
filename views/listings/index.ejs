<% layout("/layouts/boilerplate") %>

    <style>
      #filters {
        position: sticky;        
        top: 70px;              
        z-index: 1020;           
        background-color: #fff; 
        padding: 4rem 0 1rem 0;
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        border-bottom: 1px solid #ddd;
      }
      #filters a {
        text-decoration: none;
        color: black;
      }

      .filter {
        text-align: center;
        margin-right: 2rem;
        margin-top: 2rem;
        opacity: 0.6;
        padding-bottom: 1rem;
      }
      .filter:hover {
        opacity: 1;
        cursor: pointer;
        font-size: larger;
        transition: 0.3s linear;
      }
      .filter p {
        font-size: 0.8rem;
      }
      .tax-info {
        display: none;
      }
      .tax-toggle {
        border: 1px solid black;
        border-radius: 1rem;
        height: 3rem;
        padding: 1rem;
        margin-left: 3rem;
        display: flex;
        align-items: center;
        font-size: 0.9rem;
      }

    </style>

    <div id="filters" class="sticky-top bg-white py-2 border-bottom">
      <a href="/listings?filter=trending">
        <div class="filter">
          <div><i class="fa-solid fa-fire"></i></div>
          <p>Trending</p>
        </div>
      </a>
      <a href="/listings?filter=iconiccities">
        <div class="filter">
          <div><i class="fa-solid fa-city"></i></div>
          <p>Iconic Cities</p>
        </div>
      </a>
      <a href="/listings?filter=mountains">
        <div class="filter">
          <div><i class="fa-solid fa-mountain-sun"></i></div>
          <p>Mountains</p>
        </div>
      </a>
      <a href="/listings?filter=beaches">
        <div class="filter">
          <div><i class="fa-solid fa-umbrella-beach"></i></div>
          <p>Beaches</p>
        </div>
      </a>
      <a href="/listings?filter=castles">
        <div class="filter">
          <div><i class="fa-brands fa-fort-awesome"></i></div>
          <p>Castles</p>
        </div>
      </a>
      <a href="/listings?filter=camping">
        <div class="filter">
          <div><i class="fa-solid fa-campground"></i></div>
          <p>Camping</p>
        </div>
      </a>
      <a href="/listings?filter=cottages">
        <div class="filter">
          <div><i class="fa-solid fa-house-chimney-window"></i></div>
          <p>Cottages</p>
        </div>
      </a>
      <a href="/listings?filter=arctic">
        <div class="filter">
          <div><i class="fa-solid fa-snowflake"></i></div>
          <p>Arctic</p>
        </div>
      </a>
      <a href="/listings?filter=rooms">
        <div class="filter">
          <div><i class="fa-solid fa-bed"></i></div>
          <p>Rooms</p>
        </div>
      </a>
      
      <div class="tax-toggle">
        <div class="form-check-reverse form-switch">
          <input 
          class="form-check-input" 
          type="checkbox" 
          role="switch" 
          id="flexSwitchCheckDefault"
          /> 
          <label class="form-check-label" for="flexSwitchCheckDefault"
          >Display total after taxes</label>
        </div>
      </div>

    </div>
    <br><br>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
        <% for(listing of allListings) { %>
            <a href="/listings/<%= listing._id %>" class="listing-link">
              <div class="card col listing-card" style="width: 20rem;">
                <img 
                src="<%= listing.image.url %>" 
                class="card-img-top" 
                alt="listing_image" 
                style="height: 20rem;" 
                />
                <div class="card-img-overlay"></div>
                <div class="card-body">
                  <p class="card-text">
                    <b><%= listing.title %></b>
                    <br />
                    &#8377;<%= listing.price.toLocaleString("en-IN") %> / night
                    <i class="tax-info"> &nbsp; +18% GST</i>
                  </p>
                </div>
              </div>
            </a>
        <% } %>
    </div>

<script>
  let taxSwitch = document.getElementById("flexSwitchCheckDefault");

  taxSwitch.addEventListener("click",()=>{
    let taxInfo = document.getElementsByClassName("tax-info");

    for(info of taxInfo){
      if(info.style.display != "inline")
      {
      info.style.display = "inline";
      }
      else{
      info.style.display = "none";
      }
    }
  
});
</script>